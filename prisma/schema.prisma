generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}

// --- ID REPORTING ---
enum IDStatus {
  LOST
  AVAILABLE
  MATCHED    // Added this
  RETURNED
}

model LostID {
  id            String   @id @default(cuid())
  userId        String   // Clerk User ID
  idType        String   
  fullName      String
  idNumber      String?
  dateOfBirth   String?  
  dateOfIssue   String?  
  placeOfBirth  String?  
  description   String?
  imageUrl      String?  
  backImageUrl  String?  
  lastLocation  String
  qrCodeId      String?
  dateLost      DateTime @default(now())
  status        IDStatus @default(LOST)
  createdAt     DateTime @default(now())
}

model FoundID {
  id             String   @id @default(cuid())
  idType         String
  fullName       String   
  idNumber       String?  
  dateOfBirth    String?  
  dateOfIssue    String?  
  placeOfBirth   String?  
  imageUrl       String   
  backImageUrl   String?  
  region         String
  locationDetail String
  description    String?  @db.Text // Renamed from notes for consistency
  reporterId     String   // Clerk User ID or "anonymous"
  reporterName   String?
  status         IDStatus @default(AVAILABLE) // Changed to Enum for consistency
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- QR SECURE VAULT ---
model UserVault {
  id        String   @id @default(cuid())
  userId    String   @unique
  qrSlug    String   @unique @default(uuid()) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- REAL-TIME CHAT ---
model Chat {
  id           String    @id @default(cuid())
  reportId     String    
  ownerId      String    
  finderId     String    
  participants String[]  
  messages     Message[]
  updatedAt    DateTime  @updatedAt
  createdAt    DateTime  @default(now())

  @@index([participants])
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  senderId  String   
  text      String
  createdAt DateTime @default(now())
}

// --- SYSTEM ---
model Notification {
  id        String   @id @default(cuid())
  userId    String   
  title     String
  message   String
  type      String   
  metadata  Json?    
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model FraudReport {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  issueType   String   
  description String   @db.Text
  evidenceUrl String?  
  status      String   @default("PENDING") 

  @@map("fraud_reports")
}

model SupportTicket {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  status    String   @default("OPEN") 
}